<Window x:Class="ReadAndWriteStreams.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadAndWriteStreams"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Menu VerticalAlignment="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Read" Name="ReadMenuItem" Click="MenuItem_Click"></MenuItem>
				<MenuItem Header="_Write" Name="WriteMenuItem" Click="MenuItem_Click"></MenuItem>
			</MenuItem>
		</Menu>
	</Grid>
</Window>
